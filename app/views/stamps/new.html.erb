<div class="container">
  <div class="well">
    <h2>Add New Label</h2>

    <%= form_for ([:user, @stamp]), html: { multipart: true } do |f| %>
    <% if @stamp.errors.any? %>
    <% @stamp.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger"><%= msg %></div>
    <% end %>
    <% end %>

    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class:'form-control' %><br>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control' %><br>
    </div>

    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, class:'form-control' %><br>
    </div>

    <%= f.submit "Submit", class: 'btn btn-primary' %>
    <%= link_to "Cancel", "/", class: "btn btn-default" %>

    <% end %>
  </div>
</div>